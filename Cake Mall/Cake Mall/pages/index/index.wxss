.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.banner {
  width: 100%;
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.category-list {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  min-width: 120rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #FF6B6B;
}

.category-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  border-radius: 50%;
  background-color: #f8f8f8;
  transition: all 0.3s;
}

.category-item.active .category-icon-wrapper {
  background-color: #FFE4E4;
}

.category-icon {
  width: 50rpx;
  height: 50rpx;
}

.category-title {
  padding: 20rpx 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.cake-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.cake-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s;
}

.cake-item:active {
  transform: scale(0.98);
}

.cake-image {
  width: 100%;
  height: 300rpx;
}

.cake-info {
  padding: 16rpx;
}

.cake-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cake-price {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.empty-category {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
} 