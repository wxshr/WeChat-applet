/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

view, text, image, button, input {
  box-sizing: border-box;
}

/* 去除按钮默认样式 */
button {
  background: none;
  padding: 0;
  margin: 0;
  line-height: inherit;
  border-radius: 0;
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
}

button::after {
  border: none;
}

/* 清除浮动 */
.clearfix:after {
  content: "";
  display: block;
  clear: both;
} 