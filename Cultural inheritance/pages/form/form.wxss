.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-group {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.form-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: bold;
  position: relative;
  padding-left: 24rpx;
}

.form-label::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(to bottom, #1890ff, #40a9ff);
  border-radius: 4rpx;
}

input {
  width: 100%;
  height: 90rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

input:focus {
  border-color: #1890ff;
  background: #f0f9ff;
  box-shadow: 0 0 10rpx rgba(24, 144, 255, 0.1);
}

textarea {
  width: 100%;
  height: 240rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

textarea:focus {
  border-color: #1890ff;
  background: #f0f9ff;
  box-shadow: 0 0 10rpx rgba(24, 144, 255, 0.1);
}

.picker {
  width: 100%;
  height: 90rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-sizing: border-box;
  margin: 0;
}

.picker:active {
  background: #f0f9ff;
  border-color: #1890ff;
  box-shadow: 0 0 10rpx rgba(24, 144, 255, 0.1);
}

.error-tip {
  color: #ff4d4f;
  font-size: 26rpx;
  margin-top: 12rpx;
  padding-left: 24rpx;
}

/* 图片上传样式 */
.image-uploader {
  padding: 24rpx 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  justify-content: center;
  width: 100%;
}

.image-item {
  width: 220rpx;
  height: 220rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s;
}

.delete-btn:active {
  transform: scale(0.9);
}

.upload-btn {
  width: 220rpx;
  height: 220rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #1890ff;
  border: 2rpx dashed #1890ff;
  transition: all 0.3s;
}

.upload-btn:active {
  background: #e6f7ff;
  border-color: #40a9ff;
  color: #40a9ff;
}

.submit-btn {
  margin: 60rpx 0;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(to right, #1890ff, #40a9ff);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 6rpx 16rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s;
  text-align: center;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
} 