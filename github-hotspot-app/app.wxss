/**
 * 全局样式表
 */

/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f8fa;
  padding-bottom: 30rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin: 20rpx 24rpx;
  overflow: hidden;
}

/* 标题样式 */
.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #24292e;
  margin-bottom: 12rpx;
  word-break: break-word;
}

/* 次要标题 */
.subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #0366d6;
  margin: 20rpx 0 10rpx;
}

/* 描述文本 */
.description {
  font-size: 28rpx;
  color: #586069;
  margin-bottom: 16rpx;
  word-break: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 次要文本 */
.text-secondary {
  font-size: 26rpx;
  color: #6a737d;
}

/* 图标 */
.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 小图标 */
.icon-small {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

/* 按钮 */
button.primary {
  background-color: #0366d6;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 16rpx 0;
  padding: 0 32rpx;
  line-height: 2.3;
}

button.secondary {
  background-color: #fafbfc;
  color: #24292e;
  font-size: 28rpx;
  border: 1rpx solid #e1e4e8;
  border-radius: 8rpx;
  margin: 16rpx 0;
  padding: 0 32rpx;
  line-height: 2.3;
}

/* Flex布局 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-grow {
  flex-grow: 1;
}

/* 加载状态 */
.loading {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 70rpx;
  height: 70rpx;
  border: 4rpx solid #eaeaea;
  border-top: 4rpx solid #0366d6;
  border-radius: 50%;
  animation: spin 1s infinite linear;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #6a737d;
}

/* 页脚提示 */
.footer-tip {
  font-size: 24rpx;
  color: #6a737d;
  text-align: center;
  margin: 20rpx 0;
}

/* 语言标识点 */
.language-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}

/* 徽章 */
.badge {
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 10rpx;
}

.badge-primary {
  background-color: #0366d61a;
  color: #0366d6;
}

.badge-success {
  background-color: #2ea44f1a;
  color: #2ea44f;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background-color: #eaecef;
  margin: 20rpx 0;
}

/* 操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
  z-index: 999;
} 