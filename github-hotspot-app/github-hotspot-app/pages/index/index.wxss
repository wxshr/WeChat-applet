/* pages/index/index.wxss */
.language-filter {
  display: flex;
  white-space: nowrap;
  background-color: #fff;
  padding: 10px 0;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  margin-bottom: 12px;
}

.filter-item {
  display: inline-block;
  padding: 8px 16px;
  margin: 0 4px;
  border-radius: 16px;
  font-size: 14px;
  transition: all 0.3s;
}

.filter-item:first-child {
  margin-left: 16px;
}

.filter-item:last-child {
  margin-right: 16px;
}

.filter-item.active {
  background-color: #0366d6;
  color: #fff;
}

.repo-list {
  flex: 1;
  width: 100%;
}

.loading-icon {
  width: 24px;
  height: 24px;
  border: 2px solid #0366d6;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 0.8s linear infinite;
  margin-right: 8px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading, .empty-tip, .load-more, .load-all {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px 0;
  color: #586069;
  font-size: 14px;
}

.empty-tip {
  flex-direction: column;
  padding: 40px 0;
}

.empty-tip image {
  width: 120px;
  height: 120px;
  margin-bottom: 12px;
  opacity: 0.6;
}

.load-all {
  color: #8b949e;
} 