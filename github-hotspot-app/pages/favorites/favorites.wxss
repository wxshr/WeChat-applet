/* pages/favorites/favorites.wxss */
.container {
  padding-bottom: 120rpx;
}

.favorites-list {
  padding-bottom: 30rpx;
}

.manage-bar {
  display: flex;
  justify-content: center;
  margin: 40rpx 24rpx;
}

.manage-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafbfc;
  color: #24292e;
  border: 1rpx solid #e1e4e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
}

.manage-btn::after {
  border: none;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-tip text {
  font-size: 30rpx;
  color: #6a737d;
  margin-bottom: 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.title {
  font-size: 20px;
  font-weight: 600;
  color: #24292e;
}

.clear-btn {
  padding: 6px 12px;
  background-color: #f6f8fa;
  color: #586069;
  border-radius: 4px;
  font-size: 14px;
}

.clear-btn:active {
  background-color: #eef1f5;
}

.tip-action {
  margin-top: 8px;
  font-size: 14px;
  color: #0366d6;
} 