/* pages/favorites/favorites.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.title {
  font-size: 20px;
  font-weight: 600;
  color: #24292e;
}

.clear-btn {
  padding: 6px 12px;
  background-color: #f6f8fa;
  color: #586069;
  border-radius: 4px;
  font-size: 14px;
}

.clear-btn:active {
  background-color: #eef1f5;
}

.favorites-list {
  flex: 1;
  width: 100%;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 0;
  color: #586069;
}

.empty-tip image {
  width: 120px;
  height: 120px;
  margin-bottom: 12px;
  opacity: 0.6;
}

.tip-action {
  margin-top: 8px;
  font-size: 14px;
  color: #0366d6;
} 