/* pages/repo-detail/repo-detail.wxss */

.header {
  margin-top: 0;
  border-radius: 0 0 12rpx 12rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.repo-info {
  flex: 1;
  overflow: hidden;
}

.tags {
  margin: 16rpx 0;
}

.stats {
  margin-top: 20rpx;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 10rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #24292e;
}

.stat-label {
  font-size: 24rpx;
  color: #586069;
  margin-top: 6rpx;
}

/* 选项卡样式 */
.tabs {
  display: flex;
  background-color: #fff;
  margin: 20rpx 24rpx 0;
  border-radius: 12rpx 12rpx 0 0;
  border-bottom: 2rpx solid #eaecef;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #586069;
  position: relative;
  transition: all 0.3s;
}

.tab.active {
  color: #0366d6;
  font-weight: 500;
}

.tab.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background-color: #0366d6;
  border-radius: 2rpx;
}

.tab-content {
  margin: 0 24rpx 120rpx;
}

/* 信息项目样式 */
.info-item {
  display: flex;
  margin: 20rpx 0;
  align-items: center;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #6a737d;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #24292e;
  word-break: break-all;
}

.link {
  color: #0366d6;
  text-decoration: underline;
}

/* 活动图表样式 */
.activity-chart {
  margin: 20rpx 0;
}

.chart-info {
  font-size: 24rpx;
  color: #6a737d;
  text-align: center;
  margin-bottom: 20rpx;
}

.chart-bars {
  display: flex;
  height: 250rpx;
  align-items: flex-end;
  justify-content: space-around;
}

.chart-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40rpx;
}

.bar-value {
  width: 20rpx;
  background-color: #0366d6;
  border-radius: 10rpx 10rpx 0 0;
  transition: height 0.3s;
}

.bar-label {
  font-size: 20rpx;
  color: #6a737d;
  margin-top: 8rpx;
}

/* 贡献者列表样式 */
.contributor-list {
  margin-top: 10rpx;
}

.contributor-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #eaecef;
}

.contributor-item:last-child {
  border-bottom: none;
}

.contributor-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.contributor-info {
  flex: 1;
}

.contributor-name {
  font-size: 28rpx;
  color: #0366d6;
}

.contributor-commits {
  font-size: 24rpx;
  color: #6a737d;
  margin-top: 4rpx;
}

/* 底部操作栏样式 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 999;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  padding: 0;
  margin: 0 20rpx;
  line-height: normal;
}

.action-btn::after {
  border: none;
}

.action-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #24292e;
} 