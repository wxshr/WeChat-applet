/* pages/search/search.wxss */

.container {
  padding-top: 0;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f6f8fa;
  border-radius: 40rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.search-placeholder {
  color: #6a737d;
}

.clear-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
}

.clear-btn image {
  width: 24rpx;
  height: 24rpx;
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 0 0 20rpx;
  padding: 0;
  font-size: 28rpx;
  color: #0366d6;
  background-color: transparent;
}

.search-btn::after {
  border: none;
}

/* 搜索历史 */
.search-history {
  background-color: #fff;
  margin: 20rpx 24rpx;
  border-radius: 12rpx;
  padding: 24rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #24292e;
}

.clear-history {
  font-size: 24rpx;
  color: #0366d6;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #eaecef;
}

.history-item:last-child {
  border-bottom: none;
}

.history-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.history-text {
  font-size: 28rpx;
  color: #24292e;
}

/* 搜索结果统计 */
.results-stats {
  background-color: #fff;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #6a737d;
}

/* 搜索结果列表 */
.search-results {
  padding-bottom: 30rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #6a737d;
} 